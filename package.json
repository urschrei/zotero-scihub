{
  "name": "pdferret",
  "version": "1.0.3",
  "description": "Download papers and books by DOI from various providers",
  "license": "BlueOak-1.0.0",
  "scripts": {
    "lint": "eslint --cache --cache-location .eslintcache/",
    "prebuild": "npm run lint",
    "build": "tsc --noEmit && node esbuild.js",
    "postbuild": "cd build && zip -r ../pdferret.xpi . -x '*.DS_Store'",
    "release": "zp-release",
    "postversion": "git push --follow-tags",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf build pdferret.xpi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/urschrei/pdferret.git"
  },
  "author": {
    "name": "sth"
  },
  "bugs": {
    "url": "https://github.com/urschrei/pdferret/issues"
  },
  "homepage": "https://github.com/urschrei/pdferret",
  "xpi": {
    "name": "PDFerret for Zotero",
    "id": "pdferret@example.com",
    "updateLink": "https://github.com/urschrei/pdferret/releases/download/v{version}/pdferret.xpi",
    "releaseURL": "https://github.com/urschrei/pdferret/releases/download/release/",
    "iconURL": "chrome://pdferret/skin/pdferret-logo.svg",
    "minVersion": "7.0",
    "maxVersion": "8.*"
  },
  "devDependencies": {
    "@types/node": "^25.3.3",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.7.1",
    "globals": "^17.4.0",
    "jsdom": "^28.1.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.16",
    "zotero-plugin": "^9.0.1",
    "zotero-plugin-toolkit": "^5.1.2",
    "zotero-types": "^4.0.5"
  }
}

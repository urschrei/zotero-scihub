{
  "name": "zotero-scihub",
  "version": "2.0.0",
  "description": "Download papers and books by DOI from Sci-Hub",
  "scripts": {
    "lint": "eslint . --ext .ts --cache --cache-location .eslintcache/",
    "prebuild": "npm run lint",
    "build": "tsc --noEmit && node esbuild.js",
    "postbuild": "cd build && zip -r ../zotero-scihub.xpi . -x '*.DS_Store'",
    "release": "zp-release",
    "postversion": "git push --follow-tags",
    "test": "nyc mocha -r ts-node/register -r tests/setup.ts 'tests/**/*.ts'",
    "coverage": "nyc -r lcov npm run test",
    "clean": "rm -rf build zotero-scihub.xpi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethanwillis/zotero-scihub.git"
  },
  "author": {
    "name": "ethanwillis",
    "email": "example@example.com"
  },
  "bugs": {
    "url": "https://github.com/ethanwillis/zotero-scihub/issues"
  },
  "homepage": "https://github.com/ethanwillis/zotero-scihub",
  "xpi": {
    "name": "Sci-Hub Plugin for Zotero",
    "id": "zotero-scihub@example.com",
    "updateLink": "https://github.com/ethanwillis/zotero-scihub/releases/download/v{version}/zotero-scihub-{version}.xpi",
    "releaseURL": "https://github.com/ethanwillis/zotero-scihub/releases/download/release/",
    "iconURL": "chrome://zotero-scihub/skin/sci-hub-logo.svg",
    "minVersion": "7.0",
    "maxVersion": "8.*"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "chai": "^6.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jsdom": "^27.3.0",
    "mkdirp": "^3.0.1",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.1.0",
    "typescript": "^5.3.3",
    "zotero-plugin": "^8.0.4",
    "zotero-plugin-toolkit": "^5.1.0-beta.13",
    "zotero-types": "^4.0.5"
  }
}

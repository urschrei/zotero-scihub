{
  "compilerOptions": {
    "importHelpers": true,
    "target": "ES2022",
    "disableSizeLimit": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "content/**/*",
    "resource/**/*",
    "tests/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/*"
  ]
}
